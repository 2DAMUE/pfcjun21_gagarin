<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">


    <ImageView
        android:id="@+id/IMG_background_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/backgroundhome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/IMG_background_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_AprendeMas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="842dp" />

            <TextView
                android:id="@+id/TV_Aprendemas"
                android:layout_width="274dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ralewaybold"
                android:gravity="start|left"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/H_aprendeMas"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_AprendeMas2"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="@+id/guideline_AprendeMas"
                app:layout_constraintVertical_bias="0.428" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_AprendeMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="778dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RC_Lanzamientos"
                android:layout_width="0dp"
                android:layout_height="214dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_AprendeMas"
                app:layout_constraintEnd_toStartOf="@+id/Guideline_Right"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="@+id/guideline_LanzamientosHorizontal2"
                app:layout_constraintVertical_bias="0.942" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_LanzamientosHorizontal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="553dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_LanzamientosHorizontal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="510dp" />

            <TextView
                android:id="@+id/TV_PreximosLanzamientos"
                android:layout_width="274dp"
                android:layout_height="0dp"
                android:fontFamily="@font/ralewaybold"
                android:gravity="start|left"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/H_procLanzamientos"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_LanzamientosHorizontal2"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="@+id/guideline_LanzamientosHorizontal1"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Guideline_noticiasHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="177dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Guideline_Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/Guideline_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <TextView
                android:id="@+id/TV_VerMasNoticias"
                android:layout_width="85dp"
                android:layout_height="41dp"
                android:layout_marginTop="136dp"
                android:fontFamily="@font/ralewayregular"
                android:gravity="bottom|end"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/H_verMas"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/Guideline_noticiasHorizontal"
                app:layout_constraintEnd_toStartOf="@+id/Guideline_Right"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/TV_UltimasNoricias"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TV_VerMasLanzamientos"
                android:layout_width="85dp"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/ralewayregular"
                android:gravity="bottom|end"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/H_verMas"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_LanzamientosHorizontal2"
                app:layout_constraintEnd_toStartOf="@+id/Guideline_Right"
                app:layout_constraintStart_toEndOf="@+id/TV_PreximosLanzamientos"
                app:layout_constraintTop_toTopOf="@+id/guideline_LanzamientosHorizontal1" />

            <TextView
                android:id="@+id/TV_UltimasNoricias"
                android:layout_width="196dp"
                android:layout_height="49dp"
                android:layout_marginTop="128dp"
                android:fontFamily="@font/ralewaybold"
                android:gravity="start|left"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/H_ultNoticias"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/Guideline_noticiasHorizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TV_HomeTitle"
                android:layout_width="194dp"
                android:layout_height="96dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ralewaybold"
                android:gravity="center"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="46sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RC_Noticias"
                android:layout_width="0dp"
                android:layout_height="320dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_LanzamientosHorizontal1"
                app:layout_constraintEnd_toStartOf="@+id/Guideline_Right"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="@+id/Guideline_noticiasHorizontal"
                app:layout_constraintVertical_bias="0.653" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CV_Marte"
                style="@style/Base.CardView"
                android:layout_width="172dp"
                android:layout_height="219dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintStart_toStartOf="@+id/Guideline_Left"
                app:layout_constraintTop_toTopOf="@+id/guideline_AprendeMas2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/Guideline_abajo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_end="10dp" />

                    <ImageView
                        android:id="@+id/BG_Marte"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/background_cardmarte"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TV_Marte3d"
                        android:layout_width="142dp"
                        android:layout_height="39dp"
                        android:fontFamily="@font/ralewaybold"
                        android:gravity="start|left"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/H_marte3d"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.533"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.766" />

                    <TextView
                        android:id="@+id/TV_Pruebalo"
                        android:layout_width="128dp"
                        android:layout_height="29dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/ralewaylight"
                        android:gravity="start|top"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="15dp"
                        android:text="@string/H_pruebalo"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toTopOf="@+id/Guideline_abajo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.363"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TV_Marte3d" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CV_Satelites"
                style="@style/Base.CardView"
                android:layout_width="172dp"
                android:layout_height="219dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toStartOf="@+id/Guideline_Right"
                app:layout_constraintTop_toTopOf="@+id/guideline_AprendeMas2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="@+id/base_cardview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.511"
                    tools:layout_editor_absoluteX="-55dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/Guideline_abajo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_end="10dp" />

                    <ImageView
                        android:id="@+id/BG_Satelites"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/background_cardsatelites"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TV_Satelites"
                        android:layout_width="146dp"
                        android:layout_height="68dp"
                        android:fontFamily="@font/ralewaybold"
                        android:gravity="start|left"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/H_satelites"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.615"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.754" />

                    <TextView
                        android:id="@+id/TV_Pruebalo2"
                        android:layout_width="128dp"
                        android:layout_height="29dp"
                        android:fontFamily="@font/ralewaylight"
                        android:gravity="start|top"
                        android:padding="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="15dp"
                        android:text="@string/H_pruebalo"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toTopOf="@+id/Guideline_abajo2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.363"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/TV_Satelites" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>