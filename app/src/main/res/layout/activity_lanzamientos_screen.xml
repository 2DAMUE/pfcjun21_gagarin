<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanzamientosScreen">

    <ImageView
        android:id="@+id/IV_Background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_lanzamientos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_SlideMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_on_surface_24dp" />

    <TextView
        android:id="@+id/TV_HomeTitle"
        android:layout_width="335dp"
        android:layout_height="154dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/ralewaybold"
        android:gravity="left"
        android:text="@string/L_tituloVentana"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_lateral1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_lateral2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_div1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="215dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_div2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="166dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RC_Lanzaminetos_central"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="@+id/guideline_lanzamientos_div1" />

    <ProgressBar
        android:id="@+id/PB_RC_Lanzamientos2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="@+id/guideline_lanzamientos_div1" />
</androidx.constraintlayout.widget.ConstraintLayout>