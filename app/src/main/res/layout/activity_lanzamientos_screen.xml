<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanzamientosScreen">

    <ImageView
        android:id="@+id/IV_Background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_lanzamientos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_SlideMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_on_surface_24dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/menu_view_lanz"
        style="@style/CardViewStyle_5"
        android:layout_width="338dp"
        android:layout_height="1185dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.511"
            tools:layout_editor_absoluteX="-55dp">

            <ImageView
                android:id="@+id/iv_x_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/x_icon"></ImageView>

            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/home_icon" />

            <TextView
                android:id="@+id/tv_home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/home_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_news_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_home_icon"
                app:srcCompat="@drawable/news_icon" />

            <TextView
                android:id="@+id/tv_news_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/news_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_icon" />

            <ImageView
                android:id="@+id/iv_launches_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_news_icon"
                app:srcCompat="@drawable/launches_icon" />

            <TextView
                android:id="@+id/tv_launches_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/launches_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_news_icon" />

            <ImageView
                android:id="@+id/iv_mars_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_launches_icon"
                app:srcCompat="@drawable/mars_icon" />

            <TextView
                android:id="@+id/tv_mars_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/mars_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_launches_icon" />

            <ImageView
                android:id="@+id/iv_satellites_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_mars_icon"
                app:srcCompat="@drawable/satellites_icon" />

            <TextView
                android:id="@+id/tv_satellites_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/satellites_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mars_icon" />

            <ImageView
                android:id="@+id/iv_settings_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_satellites_icon"
                app:srcCompat="@drawable/settings_icon" />

            <TextView
                android:id="@+id/tv_settings_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/settings_menu"
                android:textColor="@color/super_white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_satellites_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/TV_HomeTitle"
        android:layout_width="335dp"
        android:layout_height="154dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/ralewaybold"
        android:gravity="left"
        android:text="@string/L_tituloVentana"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_lateral1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_lateral2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_div1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="225dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_lanzamientos_div2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="86dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RC_Lanzaminetos_central"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="@+id/guideline_lanzamientos_div1"
        app:layout_constraintVertical_bias="1.0" >

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/PB_RC_Lanzamientos2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guideline_lanzamientos_div2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_lanzamientos_lateral1"
        app:layout_constraintStart_toStartOf="@+id/guideline_lanzamientos_lateral2"
        app:layout_constraintTop_toTopOf="@+id/guideline_lanzamientos_div1" />

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blur_bg_lanzamiento"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/IV_Background"
        app:layout_constraintEnd_toEndOf="@+id/IV_Background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/V_sesac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </eightbitlab.com.blurview.BlurView>
</androidx.constraintlayout.widget.ConstraintLayout>