<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gagarin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/super_white</item>
        <item name="colorPrimaryVariant">@color/super_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Gagarin.noBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/super_white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="colorPrimaryVariant">@color/super_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/super_white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cardBackgroundColor">@color/opacity</item>
    </style>

    <style name="CardViewStyle_2" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cardBackgroundColor">@color/glass</item>
    </style>
    <style name="CardViewStyle_3" parent="CardView">
        <item name="cardCornerRadius">35dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cardBackgroundColor">#B2000000</item>
    </style>
    <style name="CardViewStyle_4" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cardBackgroundColor">#00000000</item>
    </style>
    <style name="ButtonStraight" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/super_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="ButtonStraight2" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black_opacity</item>
        <item name="android:textColor">@color/super_white</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="CardViewStyle_9" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/glass</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/opacity2</item>
    </style>
    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>